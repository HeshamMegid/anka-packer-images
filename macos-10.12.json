{
  "builders": [
    {
     "type": "veertu-anka",
     "installer_app": "/Applications/Install macOS Sierra.app/",
     "disk_size": "{{user `disk_size`}}",
     "ram_size": "{{user `ram_size`}}",
     "cpu_count": "{{user `cpu_count`}}",
     "vm_name": "{{ user `vm_name` }}-r{{ user `build_number` }}",
     "source_vm_name":  "{{user `source_vm`}}"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/macos/homebrew.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "cpu_count": "2",
    "disk_size": "20G",
    "ram_size": "4G",
    "version": "10.12.3",
    "vm_name": "macos-base-10.12.3",
    "build_number": "1",
    "source_vm": ""
  }
}